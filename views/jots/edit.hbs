<h3>Edit Jot</h3>
<div class="row">
    <form action="/jots/{{jot._id}}" method="POST" class="col s12">
    <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{jot.title}}">
                <label for="title">Title</label>
            </div>
        </div>


        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    {{#select jot.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us</h5>
                <textarea id="body" name="body">{{jot.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn pink">
            <a href="/dashboard" class="btn yellow">Cancel</a>
        </div>

    </form>

</div>
<div class="row">
    <div class="col s12 m8">
        <h3>{{jot.title}}
            <small>{{{editIcon jot.user user jot._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{jot.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{jot.user.displayName}}</span>
                <img src="{{jot.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/jots/user/{{jot.user._id}}">More from {{jot.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>
<h3>Welcome {{ name }}</h3>
<h3 class="dashHead">DashBoard</h3>
{{#if jots}}
    <table class="striped">
        <thead>
            <tr>
                <th>Jot Title</th>
                <th>Date</th>
                <th>Status</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each jots}}
                <tr>
                    <td>
                        <a href="/jots/{{_id}}"></a>{{title}}
                    </td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td>
                        <a href="/jots/edit/{{_id}}" class="btn btn-float deep-purple accent-2">
                        <i class="fas fa-edit"></i>
                        </a>

                        <form action="/jots/{{_id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn pink accent-1">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="/jots" class="waves-effect waves-light btn-small pink darken-14">Check Out Our Community Jots</a>
{{else}}
<p>You have not created anything</p>
<a href="/jots" class="waves-effect waves-light btn-small pink darken-14">Check Out Our Community Jots</a>
{{/if}}